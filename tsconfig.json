{
  "compilerOptions": {
    "target": "ES2022", // modern JS features
    "module": "nodenext", // allows native import/export
    "moduleResolution": "nodenext",
    "esModuleInterop": true, // clean import from CommonJS
    "allowJs": true, // allow JS files too
    "checkJs": false, // donâ€™t check types in JS
    "noEmitOnError": false, // compile even if type errors
    "strict": false, // disable strict type checking
    "skipLibCheck": true, // skip type checks for node_modules
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["**/*.ts", "types/**/*.d.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true,
    "compilerOptions": {
      "typeRoots": ["./types", "./node_modules/@types"]
    }
  }
}
