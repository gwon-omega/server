# Example environment variables for the project
# Copy this file to .env and fill the values before running

# Server
PORT=5000

# Database (Postgres/Sequelize)
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DBNAME

# JWT
JWT_SECRET=change_this_to_a_strong_secret

# Optional API key for direct admin operations
API_KEY=optional_admin_api_key_here

# Password hashing
BCRYPT_SALT=10

# Forgot-password flow
FORGOT_PIN_TTL_MINUTES=15
FRONTEND_URL=http://localhost:3000

# External mail provider (Resend) - optional
RESEND_API_KEY=your_resend_api_key_here
CONTACT_EMAIL=codingwithjiwan@gmail.com

# Cloudinary for image uploads
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Payment provider endpoints / secrets
ESEWA_VALIDATE_URL=https://uat.esewa.com.np/epay/transrec
KHALTI_INIT_URL=https://dev.khalti.com/api/v2/epayment/initiate/
KHALTI_SECRET_KEY=your_khalti_secret_key_here

# Optional: Resend/Postman etc.
POSTMAN=
